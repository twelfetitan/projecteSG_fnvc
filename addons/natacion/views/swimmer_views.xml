<odoo>
    <data>

        <!-- List View -->
        <record model="ir.ui.view" id="natacion.swimmer_list">
            <field name="name">natacion list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="category" />
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="natacion.swimmer_form_view">
            <field name="name">natacion.swimmer.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Nadador">
                    <sheet>

                        <group string="Datos del Nadador">
                            <group>
                                <field name="image" widget="image" class="oe_avatar" />

                                <group>
                                    <field name="name" />
                                </group>

                                <group>
                                    <field name="year_birth" />
                                </group>

                                <group>
                                    <field name="age" readonly="1" />
                                </group>

                                <group>
                                    <field name="category" />
                                </group>

                                <group>
                                    <field name="club_id" />
                                </group>

                                <group>
                                    <field name="is_swimmer" />
                                </group>

                                <group string="Eventos">
                                    <field name="event_ids" widget="many2many_tags" readonly="1" />
                                </group>

                                <group>
                                    <field name="end_quota" readonly="1" />
                                    <field name="quota_progress" widget="progressbar"
                                        options="{'max': 100}" />
                                </group>

                            </group>

                            <group>
                                <button string="Ver Formulario Original" type="object"
                                    name="action_open_res_partner_view" class="btn-primary" />
                                <button string="Pagar Cuota" type="object" name="pay_quota"
                                    class="btn-primary" />
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Filtro -->
        <record model="ir.ui.view" id="natacion.swimmer_search_view">
            <field name="name">natacion.swimmer.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <filter string="Solo Nadadores" name="is_swimmer_filter"
                        domain="[('is_swimmer', '=', True)]" />
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record model="ir.ui.view" id="natacion.swimmer_kanban_view">
            <field name="name">natacion.swimmer.kanban</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_example">
                    <field name="name" />
                    <field name="image" />
                    <field name="category" />
                    <field name="club_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_global_click">
                                    <div class="o_kanban_image">
                                        <img
                                            t-att-src="kanban_image('res.partner', 'image', record.id.value)"
                                            class="oe_avatar" alt="Imagen" />
                                    </div>
                                    <strong>
                                        <t t-esc="record.name.value" />
                                    </strong>
                                    <div>
                                        <span>
                                            <b>CategorÃ­a:</b>
                                            <t t-esc="record.category.value" />
                                        </span>
                                        <br />
                                        <span>
                                            <b>Club:</b>
                                            <t t-esc="record.club_id.value" />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Action  -->
        <record model="ir.actions.act_window" id="natacion.action_swimmer_window">
            <field name="name">Swimmer</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="natacion.swimmer_list" />
            <field name="search_view_id" ref="natacion.swimmer_search_view" />
            <field name="view_ids"
                eval="[(5, 0, 0), 
                                  (0, 0, {'view_mode': 'kanban', 'view_id': ref('natacion.swimmer_kanban_view')}),
                                  (0, 0, {'view_mode': 'list', 'view_id': ref('natacion.swimmer_list')}),
                                  (0, 0, {'view_mode': 'form', 'view_id': ref('natacion.swimmer_form_view')})]" />
        </record>

    </data>

    <!-- Action df  -->
</odoo>