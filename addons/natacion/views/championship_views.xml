<odoo>
    <data>


        <!-- List View (sin cambios) -->
        <record model="ir.ui.view" id="natacion.championship_list">
            <field name="name">natacion.championship.list</field>
            <field name="model">natacion.championship</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="club_ids" />
                    <field name="session_ids" />
                </list>
            </field>
        </record>


        <!-- Wizard Form COMPLETO (plural + limpio) -->
        <record model="ir.ui.view" id="view_natacion_championship_swimmers_wizard_form">
            <field name="name">natacion.championship.swimmers.wizard.form</field>
            <field name="model">natacion.championship.swimmers.wizard</field>
            <field name="arch" type="xml">
                <form string="Inscripción Nadadores">
                    <sheet>
                        <group>
                            <field name="championship_id" readonly="1" />
                            <label for="swimmer_ids"
                                string="Nadadores de clubs inscritos (cuota OK)" />
                            <field name="swimmer_ids" nolabel="1" widget="many2many_tags"
                                options="{'no_create': True, 'no_open': True}" />
                            <field name="swimmer_quota_valid" invisible="1" />
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Inscribir"
                            type="object" class="btn-primary oe_highlight" />
                        <button string="Cancelar" special="cancel" class="btn-secondary" />
                    </footer>
                </form>
            </field>
        </record>


        <!-- Acción Wizard (plural) -->
        <record id="action_natacion_championship_swimmers_wizard" model="ir.actions.act_window">
            <field name="name">Inscripción Nadadores</field>
            <field name="res_model">natacion.championship.swimmers.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_natacion_championship_swimmers_wizard_form" />
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="view_natacion_championship_json_wizard_form">
            <field name="name">natacion.championship.json.wizard.form</field>
            <field name="model">natacion.championship.json.wizard</field>
            <field name="arch" type="xml">
                <form string="Contenido Campeonato JSON">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="championship_id" />
                            </h1>
                        </div>
                        <field name="json_results"
                            nolabel="1"
                            readonly="1"
                            height="700"
                            widget="text" />
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_natacion_championship_json_wizard" model="ir.actions.act_window">
            <field name="name">JSON Resultados</field>
            <field name="res_model">natacion.championship.json.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_natacion_championship_json_wizard_form" />
            <field name="target">new</field>
        </record>


        <!-- Form Championship (botón incluido) -->
        <record model="ir.ui.view" id="natacion.championship_form_view">
            <field name="name">natacion.championship.form</field>
            <field name="model">natacion.championship</field>
            <field name="arch" type="xml">
                <form>
                    <!-- ✅ CABECERA SUPERIOR -->
                    <header>
                        <button name="action_generate_random"
                            string="Generar Campeonato Aleatorio"
                            type="object"
                            class="btn-success oe_highlight"
                            invisible="session_ids" />


                        <button name="%(natacion.action_report_championship_results)d"
                            string="Descargar Resultados PDF"
                            type="action"
                            class="btn-success oe_highlight"
                            icon="fa-file-pdf-o" />

                        <button name="%(action_natacion_championship_json_wizard)d"
                            string="JSON Resultados"
                            type="action"
                            class="btn-info oe_highlight"
                            icon="fa-code" />


                    </header>


                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>


                        <button name="%(action_natacion_championship_swimmers_wizard)d"
                            string="Inscribir Nadadores"
                            type="action"
                            class="btn-primary" />
                        <notebook>
                            <page string="Clubs">
                                <field name="club_ids" widget="many2many_tags" />
                            </page>
                            <page string="Nadadores">
                                <field name="swimmer_ids" />
                            </page>
                            <page string="Sesiones">
                                <field name="session_ids" />
                            </page>
                            <page string="Clasificación">
                                <group>
                                    <field name="classification_html" nolabel="1" readonly="1"
                                        sanitize="False" />
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Calendar (sin cambios) -->
        <record id="natacion.championship_calendar" model="ir.ui.view">
            <field name="name">natacion.championship.calendar</field>
            <field name="model">natacion.championship</field>
            <field name="arch" type="xml">
                <calendar string="Campeonatos"
                    date_start="start_date"
                    date_stop="end_date"
                    color="name">
                    <field name="name" />
                </calendar>
            </field>
        </record>


        <!-- Acción principal (sin cambios) -->
        <record id="natacion.championship_action" model="ir.actions.act_window">
            <field name="name">Campeonatos</field>
            <field name="res_model">natacion.championship</field>
            <field name="view_mode">list,form,calendar</field>
        </record>


    </data>
</odoo>