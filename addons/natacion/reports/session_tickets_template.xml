<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_session_tickets_template">
        <t t-call="web.basic_layout">
            <t t-foreach="range(50)" t-as="n">
                <div class="page">
                    <div style="
                        position: absolute;
                        top: 2mm;
                        left: 2mm;
                        width: 196mm;
                        height: 46mm;
                        background: #27ae60;
                        border: 4px solid #000;
                        color: #fff;
                        font-family: Arial Black, Arial, sans-serif;
                        font-size: 32px;
                        font-weight: bold;
                        text-align: center;
                        line-height: 46mm;
                    ">
                        <span t-esc="n+1"/>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
